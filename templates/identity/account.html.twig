{% extends 'base.html.twig' %}

{% block body %}

<section id="hero" class="vh-100" style="background-color: black;">
    <div class="container h-100 d-flex flex-column justify-content-center">
        <h1 class="h1 text-center py-4 text-white font-bold">
            {{ 'app_identity_account.title'|trans }}
        </h1>
        <div class="row text-white">
            {{ form_start(form)}}
            <div class="col-md-6 offset-md-3">
                {{ 'app_identity_account.message'|trans }}
                <hr class="my-4">
                <div class="row">
                {% for account in form.account %}
                    <div class="col-md-4">
                        <div class="custom-control custom-radio image-checkbox">
                            {{ form_widget(account, {'attr': {'class': 'custom-control-input'}}) }}
                            <label class="custom-control-label" for="{{ account.vars.id }}">
                                <img src="{{ asset('/images/' ~ account.vars.label ~ '.png') }}" class="img-fluid w-100 border" alt="{{ account.vars.label }}">
                                <div class="text-center">
                                    <p class=""><small class="">{{ show_account_desc(account.vars.value).description }}</small></p>
                                </div>
                            </label>
                        </div>
                    </div>
                {% endfor %}
                </div>
                <hr class="my-4">
                <div class="d-flex justify-content-center">
                    <button type="submit" id="get_started" class="btn btn-primary">
                        {{ 'app_identity_account.button'|trans }}
                    </button>
                </div>
            </div>
        </div>
                
        {{ form_end(form)}}
    </div>
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6"></div>
        </div>
    </div>
</section>

{% endblock %}
