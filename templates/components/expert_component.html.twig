
<a href="{{ path('app_home_form_expert', {'username': this.expert.identity.username}) }}">
  <div class="col">
      <div class="card">
          <img src="{{vich_uploader_asset(this.expert.identity, 'file')}}" class="card-img-top" alt="{{ this.expert.identity.user.firstName }}">
          <div class="card-body">
              <p class="card-title h6">{{ this.expert.identity.user.firstName }} {{ this.expert.identity.user.lastName|slice(0, 1)|upper }}.</p>
              <small>
                  <small class="card-text">{{ this.expert.title }}</small><br>
                  <small class="card-text"><i class="mx-1 bi bi-trophy"></i> {{ this.expert.identity.experiences|length }} {{ 'app_catalog_expert.realised'|trans }}</small><br>
                  <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ 'app_catalog_expert.certificated'|trans }}</small>
              </small>
          </div>
      </div>
  </div>
</a>